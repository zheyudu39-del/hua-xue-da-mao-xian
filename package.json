{
  "name": "ski-adventure",
  "version": "1.0.0",
  "description": "滑雪大冒险 - 一款精美的滑雪游戏",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "keywords": [
    "game",
    "ski",
    "adventure"
  ],
  "author": "滑雪大冒险",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.ski.adventure",
    "productName": "滑雪大冒险",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "style.css",
      "game.js",
      "intro_cinematic.js",
      "main.js",
      "icon.ico",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "滑雪大冒险"
    }
  }
}
